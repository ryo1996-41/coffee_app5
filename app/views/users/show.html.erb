<div class="show-wrapper">
  <div class="container">
    <div class="user-show-width">
      <div class="show-info">
        <div class="show-image">
          <%= image_tag (@user.avatar)if @user.avatar.attached? %>
        </div>
        <div class="show-detail">
          <h2>  <%=@user.name%></h2>
          <strong class="post-counts">
            投稿<%=@user.posts.count%>件
          </strong>
          <span class="stats">
            <%= render 'users/stats' %>
          </span>
          <%= render 'users/follow_form' %>
          <div class="personal">
          <%if @current_user.id == @user.id  %>
          <p><%=@user.email%></p>
          <%end%>
          <%=@user.introduce if @user.introduce%><br>
          </div>
          <%if @current_user.id == @user.id  %>
          <div class="edit">
            <p>
              <%=link_to("編集","/users/#{@user.id}/edit",class:"underline edit-btn")%>
            </p>
          </div>
          <%end%>
        </div>
      </div>

      <div class="post-all">
        <div class="posts-detail">
          <% @posts.each do |post| %>
          <%=link_to "/posts/#{post.id}" do%>
          <%=image_tag (post.image)%>
          <%end%>
          <%end%>
        </div>
      </div>
    </div>
    <div class="footer">
      <p>@coffee_app</p>
    </div>
  </div>
</div>
