<div class = "new-wrapper">
  <div class = "container">
    <div class="new-width">
      <div class = "new-title">
        <h4>新規登録</h4>
      </div>
      <div class = "new-form">
        <div class="form">
          <%= form_with model: @user, url: users_create_path , method: 'POST', local: true do |form| %>
          <p>名前</p>
          <%= form.text_field :name %>
          <span class="presence-error-message">
            <%if @user.errors.include?(:name)%>
            <%=@user.errors.full_messages_for(:name).first%>
            <%end%>
          </span>

          <p>メールアドレス</p>
          <%= form.email_field :email %>
          <span class="presence-error-message">
            <%if @user.errors.include?(:email)%>
            <%=@user.errors.full_messages_for(:email).first%>
            <%end%>
          </span>

          <p>パスワード</p>
          <%= form.password_field :password %>
          <span class="presence-error-message">
            <%if @user.errors.include?(:password)%>
            <%=@user.errors.full_messages_for(:password).first%>
            <%end%>
          </span>

          <div class="mypage-image">
            <p>画像</p>
            <%=form.file_field :avatar%>
            <span class="presence-error-message">
            <%if @user.errors.include?(:avatar)%>
            <%=@user.errors.full_messages_for(:avatar).first%>
            <%end%>
            </span>
          </div>

          <div class = "reserve">
            <%=form.submit "新規登録"%>
          </div>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
