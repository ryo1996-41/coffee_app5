<div class="show-main">
  <div class="container">
    <div class="post-show-width">
      <div class="post-show-info">
        <div class="post-user-info">
          <%=image_tag(@user.avatar)%>
          <%=link_to(@user.name, "/users/#{@user.id}", class:"underline post-name") %>
        </div>

        <div class="post-image">
          <%=image_tag(@post.image)%><br>
        </div>
        <div class="show-detail">
          <p class="post-time"><%=@post.created_at.strftime("%Y-%m-%d %H:%M")%></p>
          <% if @current_user %>
          <%if @post.liked_by?(@current_user)%>
          <p>
            <%=link_to "/likes/#{@post.id}/destroy", method: :post,class:"underline" do %>
            <span class="fas fa-heart like-btn"></span><!--ファボ済み -->
            <%end%>
            <%=@likes.count%>
            <%else%>
            <%=link_to "/likes/#{@post.id}/create", method: :post, class:"underline" do %>
            <span class="far fa-heart like-btn"></span><!--ファボしてない-->
            <%end%>
            <%=@likes.count%>
            <%end%>
            <%end%>
          </p>
          <p><%=@post.region%></p>
          <p><%=@post.roast%></p>
          <p><%=@post.content%></p>
          <span id="star-rate-<%= @post.id %>"></span>
          <script>
            $('#star-rate-<%= @post.id %>').raty({
              size: 36,
              starOff: "<%= asset_path('star-off.png') %>",
              starOn: "<%= asset_path('star-on.png') %>",
              starHalf: "<%= asset_path('star-half.png') %>",
              half: true,
              readOnly: true,
              score: <%= @post.rate %>,
            });
          </script>
          <%= @post.rate %>
        </div>
        <%if @current_user.id == @user.id  %>
        <div class="show-edit">
          <%=link_to("編集", "/posts/#{@post.id}/edit", class:"underline show-edit-btn") %>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
