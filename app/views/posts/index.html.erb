<div class="index-main">
    <div class="container">
     <div class="post-width">
      <div class="post-index">
        <% @posts.each do |post|%>
        <div class="post-info">
          <div class="post-user-info">
            <%=image_tag(post.user.avatar)%>
            <%=link_to(post.user.name,"/users/#{post.user_id}",class:"underline post-name")%><br>
          </div>
          <div class="post-image">
            <p><%="《#{post.region}》"%></p>
            <%=link_to "/posts/#{post.id}" do%>
            <%=image_tag(post.image)if post.image.attached? %><br>
            <%end%>
          </div>
          <div class="post-detail">
          <p class="post-time"><%=post.created_at%></p>
          <%=post.content%>
          <div class="seemore">
         <%=link_to("See more...","/posts/#{post.id}",class:"underline seemore-font")%>
         </div>
          </div>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
